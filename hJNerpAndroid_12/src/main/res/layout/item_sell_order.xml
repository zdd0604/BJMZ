<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/travel_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_bg_title"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/size_10"
            android:text="订单明细1" />

        <TextView
            android:id="@+id/order_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_10"
            android:text="删除"
            android:textColor="@color/actionbar_title_tcolor" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/item_halving_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="销售类型"
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.hjnerp.widget.MySpinner
            android:id="@+id/sell_order_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_3"
            android:layout_weight="3"
            android:drawSelectorOnTop="false"
            android:gravity="center_vertical"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="产品"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sell_order_products"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_3"
            android:layout_weight="3"
            android:drawableRight="@drawable/icon_right_orientation"
            android:gravity="center_vertical"
            android:hint="请选择产品"
            android:textColor="#000000"
            android:textColorHint="#cacacf"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="数量"
            android:textColor="#000000"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/sell_order_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="3"
            android:background="@null"
            android:digits="1234567890."
            android:gravity="center_vertical"
            android:hint="请填写数量"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:textColor="#000000"
            android:textColorHint="#cacacf"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="金额"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sell_order_type_sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="3"
            android:background="@null"
            android:focusable="false"
            android:gravity="center_vertical"
            android:textColor="#cacacf"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>