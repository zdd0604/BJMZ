<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/travel_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_bg_title"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/size_10"
            android:text="订单明细1" />

        <TextView
            android:id="@+id/order_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_10"
            android:text="删除"
            android:textColor="@color/actionbar_title_tcolor" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/item_halving_bg" />

    <LinearLayout style="@style/Item_LinearLayout_HorizontalStyle">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:text="销售类型" />

        <com.hjnerp.widget.MySpinner
            android:id="@+id/sell_order_type"
            style="@style/Item_LinearLayout_Spinner_RightStyle"
            android:drawSelectorOnTop="false" />
    </LinearLayout>

    <LinearLayout style="@style/Item_LinearLayout_HorizontalStyle">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:text="产品" />

        <TextView
            android:id="@+id/sell_order_products"
            style="@style/Item_LinearLayout_TvRightTitleImgStyle2"
            android:hint="请选择产品"
            android:textColorHint="#cacacf" />
    </LinearLayout>

    <LinearLayout style="@style/Item_LinearLayout_HorizontalStyle">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:text="数量" />


        <EditText
            android:id="@+id/sell_order_num"
            style="@style/Item_LinearLayout_EdRightTitleStyle"
            android:layout_weight="3"
            android:background="@null"
            android:digits="1234567890."
            android:hint="请填写数量"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:textColorHint="#cacacf" />
    </LinearLayout>

    <LinearLayout style="@style/Item_LinearLayout_HorizontalStyle">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:text="金额" />

        <TextView
            android:id="@+id/sell_order_type_sell"
            style="@style/Item_LinearLayout_TvRightTitleStyle"
            android:textColor="#CACACF" />
    </LinearLayout>

</LinearLayout>