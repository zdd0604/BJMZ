<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_title_bg"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout" />

    <LinearLayout
        style="@style/Item_LinearLayout_HorizontalStyle"
        android:layout_marginTop="@dimen/size_8">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:text="业务员" />

        <!--<Spinner-->
        <!--android:id="@+id/object_person"-->
        <!--style="@style/Item_LinearLayout_Spinner_RightStyle" />-->
        <TextView
            android:id="@+id/object_person"
            style="@style/Item_LinearLayout_TvRightTitleImgStyle3"
            android:hint="请选择业务员" />
    </LinearLayout>

    <LinearLayout style="@style/Item_LinearLayout_HorizontalStyle">

        <TextView
            android:id="@+id/textView2"
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:text="客户名称" />

        <TextView
            android:id="@+id/object_name"
            style="@style/Item_LinearLayout_TvRightTitleImgStyle3"
            android:hint="请选择客户" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/table_date_from"
        style="@style/Item_LinearLayout_HorizontalStyle"
        android:visibility="gone">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:text="开始时间" />

        <TextView
            android:id="@+id/table_begin_time"
            style="@style/Item_LinearLayout_TvRightTitleImgStyle3"
            android:hint="请选择开始日期" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/table_date_to"
        style="@style/Item_LinearLayout_HorizontalStyle"
        android:visibility="gone">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:text="结束时间" />

        <TextView
            android:id="@+id/table_end_time"
            style="@style/Item_LinearLayout_TvRightTitleImgStyle3"
            android:hint="请选择结束日期" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/all_goneprice_layout"
        style="@style/Item_LinearLayout_HorizontalStyle"
        android:visibility="gone">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:text="总欠款(>)" />

        <EditText
            android:id="@+id/all_goneprice_textview"
            style="@style/Item_LinearLayout_EdRightTitleStyle"
            android:digits="1234567890."
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:text="1000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/all_price_layout"
        style="@style/Item_LinearLayout_HorizontalStyle"
        android:visibility="gone">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:text="总金额" />

        <TextView
            android:id="@+id/all_price_textview"
            style="@style/Item_LinearLayout_TvRightTitleStyle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_price_layout"
        style="@style/Item_LinearLayout_HorizontalStyle"
        android:visibility="gone">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:layout_weight="3"
            android:text="180天到365天应收总额" />

        <TextView
            android:id="@+id/first_price_textview"
            style="@style/Item_LinearLayout_TvRightTitleStyle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_price_layout"
        style="@style/Item_LinearLayout_HorizontalStyle"
        android:visibility="gone">

        <TextView
            style="@style/Item_LinearLayout_TVLeftTieleStyle2"
            android:layout_weight="3"
            android:text="365天及以上应收总额" />

        <TextView
            android:id="@+id/second_price_textview"
            style="@style/Item_LinearLayout_TvRightTitleStyle" />
    </LinearLayout>

    <View style="@style/Item_View_DividerStyle" />

    <LinearLayout
        android:id="@+id/linear_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />
</LinearLayout>
