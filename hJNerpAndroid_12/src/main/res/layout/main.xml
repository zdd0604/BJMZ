                        android:layout_weight="1"
                        android:padding="5dp"
                        zhy:eapicon="@drawable/home_bottom_tab_icon_ding_normal"
                        zhy:eapiconselect="@drawable/home_bottom_tab_icon_ding_highlight"
                        zhy:eaptext="@string/main_tab_workflow"
