    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_8" />

            <LinearLayout
                android:id="@+id/rejust_list"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="订单号"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_size_16" />


                <TextView
                    android:id="@+id/var_title_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="#CACACF"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="录入人"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_size_16" />


                <TextView
                    android:id="@+id/sell_order_recorder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="#CACACF"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="订单日期"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16" />


                <TextView
                    android:id="@+id/sell_order_date_record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_weight="3"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:textColor="#CACACF"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="发货日期"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/sell_order_ticket_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:hint="请选择发货日期"
                    android:textColor="@color/black"
                    android:textColorHint="#cacacf"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="订单类型"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_size_16" />

                <Spinner
                    android:id="@+id/sell_order_type_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_weight="3"
                    android:drawSelectorOnTop="false"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="所属终端"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/sell_order_terminal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_weight="3"
                    android:drawableRight="@drawable/icon_right_orientation"
                    android:gravity="center_vertical"
                    android:hint="请选择所属终端"
                    android:textColor="@color/black"
                    android:textColorHint="#cacacf"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="结算客户"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/sell_order_send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:textColor="#CACACF"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="超期金额"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/sell_over_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:textColor="#CACACF"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="送货地址"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/sell_order_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_weight="3"
                    android:drawableRight="@drawable/icon_right_orientation"
                    android:gravity="center_vertical"
                    android:hint="请选择送货地址"
                    android:textColor="@color/black"
                    android:textColorHint="#cacacf"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="快递公司"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16" />

                <Spinner
                    android:id="@+id/sell_order_express"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_weight="3"
                    android:drawSelectorOnTop="false"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="发票类型"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_size_16" />

                <Spinner
                    android:id="@+id/sell_order_ticket_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_weight="3"
                    android:drawSelectorOnTop="false"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="票货同行"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16" />

                <Spinner
                    android:id="@+id/sell_order_space"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_weight="3"
                    android:drawSelectorOnTop="false"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="发票地址"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/sell_order_addess_send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_weight="3"
                    android:drawableRight="@drawable/icon_right_orientation"
                    android:gravity="center_vertical"
                    android:hint="请选择发票地址"
                    android:textColorHint="#cacacf"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_80"
                android:layout_marginTop="1dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="备注"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16" />

                <EditText
                    android:id="@+id/sell_order_more"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="备注"
                    android:minLines="2"
                    android:textColor="@color/black"
                    android:textColorHint="#cacacf"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>


            <com.hjnerp.widget.MyListView
                android:id="@+id/order_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/add_sell_order_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_15"
                    android:layout_height="@dimen/size_15"
                    android:src="@drawable/icon_action_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5"
                    android:gravity="center"
                    android:text="@string/sellorder_add_sllInfo"
                    android:textColor="#27a4e3"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
