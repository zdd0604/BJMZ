    <style name="Item_Search_TvTitleStyle">
        <item name="android:layout_width">@dimen/size_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_10</item>
        <item name="android:layout_marginTop">@dimen/size_2</item>
