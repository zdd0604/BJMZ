        <item name="android:layout_weight">6</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_15</item>
    </style>

    <!-- 搜索的Item LinearLayoutHorizontal 水平布局 -->
    <style name="Item_Search_LinearLayoutHorizontalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
